<?xml version="1.0"?>
<phpunit backupGlobals="false" colors="true" verbose="true">
    <testsuites>
        <testsuite name="CakePHP Predis Test Suite">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
        <blacklist>
            <directory>tests</directory>
            <directory>vendor</directory>
        </blacklist>
    </filter>
</phpunit>
